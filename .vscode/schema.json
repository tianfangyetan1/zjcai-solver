{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "account": {
      "type": "object",
      "description": "网站 zjcai.com 的账号信息",
      "properties": {
        "username": {
          "type": "string",
          "description": "网站 zjcai.com 的用户名"
        },
        "password": {
          "type": "string",
          "description": "网站 zjcai.com 的密码"
        }
      },
      "required": [
        "username",
        "password"
      ]
    },
    "deepseek-api-key": {
      "type": "string",
      "description": "Deepseek 的 API-Key，是调用 API 的凭证\n切记不要泄露给他人！",
      "pattern": "^sk-.+"
    },
    "llm-models": {
      "type": "object",
      "description": "答题时调用的模型名称",
      "properties": {
        "normal": {
          "type": "string",
          "description": "未开启深度思考时调用的模型"
        },
        "reasoner": {
          "type": "string",
          "description": "开启深度思考时调用的模型"
        }
      },
      "required": [
        "normal"
      ]
    },
    "enable-reasoning": {
      "type": "object",
      "description": "根据题型判断是否启用深度思考",
      "properties": {
        "single-or-judge": {
          "type": "boolean",
          "description": "单选题和判断题"
        },
        "fill-blank": {
          "type": "boolean",
          "description": "填空题\n推荐开启，可以降低模型抽风的概率"
        },
        "programming": {
          "type": "boolean",
          "description": "程序设计题"
        }
      }
    },
    "chromedriver-path": {
      "type": "string",
      "description": "Chrome Driver 的路径",
      "format": "uri"
    },
    "enable-latex-ocr": {
      "type": "boolean",
      "description": "是否启用 Latex 图像识别公式\n如果题目中包含图片，请开启此选项，需要安装相应依赖"
    }
  },
  "required": [
    "account",
    "deepseek-api-key",
    "llm-models"
  ]
}
